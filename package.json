{
  "name": "cds",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "global:format": "prettier --write \"**/*.{ts,tsx,md,mdx,json,js}\" '!**/*/{dist,.next,.turbo}*/**'",
    "format": "pnpm global:format && turbo run format"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "^1.10.7"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.27.1"
}
