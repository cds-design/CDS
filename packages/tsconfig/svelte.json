{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Svelte",
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
